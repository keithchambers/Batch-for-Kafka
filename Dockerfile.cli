# -------- build stage --------
FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /bin/batch ./cmd/cli

# -------- runtime stage --------
FROM alpine:3.19
COPY --from=build /bin/batch /usr/local/bin/batch
ENTRYPOINT ["/usr/local/bin/batch"]